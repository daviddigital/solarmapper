<h1> <%= @supplier.display_name %> </h1>
<div>
<div class="card mb-3" style="max-width: 100%;">
  <div class="row g-0">
    <div class="col-md-4">
        <% if @supplier.cover.attached? %>
            <%= cl_image_tag @supplier.cover.key, crop: :scale, class: "img-fluid rounded-start", cloud_name: 'testtestetsettetest123123123123' if @supplier.cover.attached? %>
        <% end %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title"><%= @supplier.display_name %></h4>
        <p class="card-text"><%= @supplier.short_description %></p>
        <h5 class="card-title">Battery Options</h5>
        <p class="card-text"><%= @supplier.batteries.map { |b| b.name }.join(", ") %></p>
        <h5 class="card-title">Solary System Options</h5>
        <p class="card-text"><%=@supplier.solars.map { |s| s.name }.join(", ") %></p>
        <h5 class="card-title">Prices After Rebates for postcode 4000</h5>
        <p class="card-text">6.6kW Solar Systems from $6,000 after rebates*</p>
        <p class="card-text">Tesla Powerwall from $12,000*</p>
        <% if !user_signed_in? %>
            <h4 class="card-title">Request Detailed Quote</h5>
            <form class="row g-3">
            <div class="col-md-6">
                <label for="inputEmail4" class="form-label">Email</label>
                <input type="email" class="form-control" id="inputEmail4">
            </div>
            <div class="col-md-6">
                <label for="inputPassword4" class="form-label">Name</label>
                <input type="password" class="form-control" id="inputPassword4">
            </div>
            <div class="col-12">
                <label for="inputAddress" class="form-label">Address</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
            </div>
            <div class="col-12">
                <label for="inputAddress2" class="form-label">Address 2</label>
                <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
            </div>
            <div class="col-md-6">
                <label for="inputCity" class="form-label">City</label>
                <input type="text" class="form-control" id="inputCity">
            </div>
            <div class="col-md-4">
                <label for="inputState" class="form-label">State</label>
                <select id="inputState" class="form-select">
                <option selected>Choose...</option>
                <option>...</option>
                </select>
            </div>
            <div class="col-md-2">
                <label for="inputZip" class="form-label">Zip</label>
                <input type="text" class="form-control" id="inputZip">
            </div>
            <div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label">Information about system requested. </label>
  <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
</div>
            <div class="col-12">
                <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                    I consent to sharing my information with Brisbane Solar Co for the purposes of providng a quote.
                </label>
                </div>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            </form>
            <% end %>
            <p class = "card-text">
<%= link_to "Go back", suppliers_path %>
</p>
<% if user_signed_in? %>
<p class = "card-text">
<%= link_to "Edit",  edit_supplier_path %> 
</p>
<p class = "card-text">
<%= link_to "Delete",  supplier_path, method: :delete, data: { confirm: "Are you sure you want to delete this supplier?"} %>
</p>
<% end %>

      </div>
    </div>
  </div>
</div>
