

<header class="p-3 bg-dark text-white">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
         <% if user_signed_in? %>
                    <li ><%= link_to 'SolarMapper', suppliers_path, class: "nav-link px-2 text-white" %> </li>
                <% else %>
                    <li > <%= link_to 'SolarMapper', root_path, class: "nav-link px-2 text-white" %> </li>
                <% end %> 
        </ul>
        <div class="text-end">
            <% if user_signed_in? %>
                <%= link_to destroy_user_session_path, method: :delete do%>
                    <button type="button" class="btn btn-outline-light me-2">Log Out</button>
                <%end%>

                <%= link_to new_supplier_path do%>
                    <button type="button" class="btn btn-warning">Add A Listing</button>
                <%end%>
            <% else %>
                <%= link_to new_user_session_path do%>
                    <button type="button" class="btn btn-outline-light me-2">Supplier Login</button>
                <%end%>
                <%= link_to new_user_registration_path do%>
                    <button type="button" class="btn btn-warning">Add A Listing</button>
                <%end%>
            <% end %> 
        </div>
      </div>
    </div>
  </header>